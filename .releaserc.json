{
  "$comment": "Two-changelog approach: CHANGELOG.md (root) is auto-generated technical changelog for developers. blocky/CHANGELOG.md is manually maintained user-facing changelog.",
  "branches": [
    "main"
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      { "preset": "conventionalcommits" }
    ],
    [
      "@semantic-release/release-notes-generator",
      { "preset": "conventionalcommits" }
    ],
    [
      "@semantic-release/exec",
      { "prepareCmd": "node scripts/update-addon-version.mjs ${nextRelease.version}" }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "blocky/config.yaml"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "@semantic-release/github"
  ]
}
